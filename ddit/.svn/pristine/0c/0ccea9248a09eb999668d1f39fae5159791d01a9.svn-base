				if(pwd1!="" && pwd2!=""){
					if(pwd1!=pwd2){
						alert("비밀번호가 일치하지 않습니다.");
						$("#member_pwd2").val("");
						$("member_pwd2").focus();
					}
				}					
			});
		});
	</script>


