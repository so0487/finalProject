 <script>
 
 function selectEmail(ele){
	 var $ele = $(ele);
	 var $domain = $('#domain'); 
	 // '1'인 경우 직접입력
	 if($ele.val() == "1"){
		 $domain.attr('readonly', false);
		 $domain.val('');
	 } else {
		 $domain.attr('readonly', true);
		 $domain.val($ele.val());
	 }
 }

 </script>

