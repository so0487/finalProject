<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="EvaToLec-Mapper">

<select id="selectEva_to_lec_No" parameterType="int" resultType="str">
	select 'EVALUTION'||LPAD(seq_eva.nextval,4,'0')
	from dual
</select>

<select id="selectEvaByNo" parameterType="str" resultType="eva">
		select
		*
		from eva
		where evalution_no=#{evalution_no}
</select>

<sql id="search">
		<if test="searchType == 't'.toString()">
			and title like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'w'.toString()">
			and writer like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'c'.toString()">
			and content like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'tc'.toString()">
			and (
			title like '%'||#{keyword}||'%'
			or
			content like '%'||#{keyword}||'%'
			)
		</if>
		<if test="searchType == 'cw'.toString()">
			and (
			content like '%'||#{keyword}||'%'
			or
			writer like '%'||#{keyword}||'%'
			)
		</if>
		<if test="searchType == 'tcw'.toString()">
			and (
			title like '%'||#{keyword}||'%'
			or
			content like '%'||#{keyword}||'%'
			or
			writer like '%'||#{keyword}||'%'
			)
		</if>
	</sql>
	
<select id="selectSearchEvaList" resultType="eva">
		select
		*
		from eva
		where evalution_no is not null
		<include refid="search" />
</select>


<select id="selectSearchEvaListCount" resultType="int">
		select
		count(*)
		from eva
		where evalution_no is not null
		<include refid="search" />

</select>

<update id="insertEva" parameterType="eva" >
		insert into	eva(evalution_no,evalution_name)
		values(#{evalution_no},#{evalution_name})
</update>

<update id="updateEva" parameterType="eva" >
	update eva
	set
	evalution_name=#{evalution_name}
	where evalutuin_no=#{evalution_no}
</update>


</mapper>